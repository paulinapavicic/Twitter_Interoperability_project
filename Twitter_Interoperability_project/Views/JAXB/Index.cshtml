@{
    ViewData["Title"] = "JAXB XML Validation";
}
<h2>JAXB XML Validation</h2>

<form asp-action="ValidateXml" method="post">
    <button type="submit" class="btn btn-primary">Validate jobpostings.xml</button>
</form>

@if (ViewBag.JaxbValidationResult != null)
{
    <h4>Validation Result:</h4>
    <pre>@ViewBag.JaxbValidationResult</pre>
}
