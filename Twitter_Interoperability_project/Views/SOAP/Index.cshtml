@{
    ViewData["Title"] = "SOAP Service Management";
}
<div class="row">
    <div class="col-md-6">
        <h3>Generate Twitter Data XML</h3>
        <form asp-action="GenerateXml">
            <div class="form-group">
                <label>Search Query:</label>
                <input type="text" name="query" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Generate XML</button>
        </form>
    </div>

    <div class="col-md-6">
        <h3>SOAP Endpoint</h3>
        <div class="alert alert-info">
            SOAP Service URL: <code>@Url.Action("", "TwitterSoap", null, "http")</code>
        </div>
    </div>
</div>